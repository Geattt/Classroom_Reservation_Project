<script>
  document.querySelector('form').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent the default form submission
    blacklistUpdate(); // Call the blacklistUpdate function
});

function blacklistUpdate() {
    const form = document.getElementById('blacklist-form');
    const formData = new FormData(form); // Automatically includes file and input fields
    
    // Check each form data key-value pair in the FormData object
    for (const [key, value] of formData.entries()) {
        console.log(`${key}: ${value}`);
    }
  
    fetch('/blacklist-status', {
        method: 'POST',
        body: formData, // Send as multipart/form-data
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Request successfully submitted');
            location.reload(); // Reload to reflect changes
        } else {
            alert('Error submitting form : ' + data.message);
        }
    })
    .catch(error => console.error('Error:', error));
}

</script>

