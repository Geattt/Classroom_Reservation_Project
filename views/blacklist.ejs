      <main>
        <h1>Blacklist Update Information</h1>
        <form id="blacklist-form" enctype="multipart/form-data">
            <label for="user_id">User ID</label>
            <input type="text" id="user_id" name="user_id" required>

            <label for="reason">Reason</label>
            <input type="text" id="reason" name="reason">
        
            <label for="blacklist_start">Blacklist Start Time</label>
            <input type="date" id="blacklist_start" name="blacklist_start">
        
            <label for="blacklist_end">Blacklist End Time</label>
            <input type="date" id="blacklist_end" name="blacklist_end">
        
            <label for="status">Status</label>
            <select id="status" name="status" required>
              <option value="0">Not Blacklisted</option>
              <option value="1">Blacklisted</option>
            </select>
        
            <button type="submit">Submit</button>
          </form>
        <h1>Blacklist Information</h1>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Blacklist ID</th>
                            <th>User ID</th>
                            <th>Reason</th>
                            <th>Blacklist Start Time</th>
                            <th>Blacklist End Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (blacklist && blacklist.length > 0) { %>
                            <% blacklist.forEach(function(blacklist) { %>
                                <tr>
                                    <td><%= blacklist.blacklist_id %></td>
                                    <td><%= blacklist.user_id %></td>
                                    <td><%= blacklist.reason %></td>
                                    <td><%= blacklist.blacklist_start %></td>
                                    <td><%= blacklist.blacklist_end %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" style="text-align: center;">No data available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
      </main>
