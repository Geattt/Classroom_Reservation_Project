<script>
  document.querySelector('form').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent the default form submission
    classroomSearch(); // Call the classroomSearch function
});

function classroomSearch() {
    const form = document.getElementById('classroom-form');
    const formData = new FormData(form);

    fetch('/classroom-query', {
        method: 'POST',
        body: formData, // Send as multipart/form-data
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        return response.json(); // Parse JSON response
    })
    .then(data => {
        console.log(data);
        const tbody = document.querySelector('tbody');
        tbody.innerHTML = ''; // Clear existing rows

        if (data.length > 0) {
            data.forEach(classroom => {

                // Add 1 day to classroom.date
                const date = new Date(classroom.date);
                date.setDate(date.getDate() + 1); // Add 1 day
                const formattedDate = date.toISOString().slice(0, 10); // Format as YYYY-MM-DD

                const row = document.createElement('tr');
                const selectedEmpty = classroom.status === 'Empty' ? 'selected' : '';
                const selectedOccupied = classroom.status === 'Occupied' ? 'selected' : '';

                row.innerHTML = `
                    <td>${classroom.class_name}</td>
                    <td>${formattedDate}</td>
                    <td>${classroom.time}</td>
                    <td>
                        <select onchange="updateClassStatus('${classroom.classroom_id}', this.value)">
                          <option value="Empty" ${selectedEmpty}>Empty</option>
                          <option value="Occupied" ${selectedOccupied}>Occupied</option>
                        </select>
                    </td>
                `;
                console.log(classroom.classroom_id)
                tbody.appendChild(row);
            });
        } else {
            // Add a row indicating no data
            const noDataRow = document.createElement('tr');
            noDataRow.innerHTML = `<td colspan="4" style="text-align: center;">No data available</td>`;
            tbody.appendChild(noDataRow);
        }
    })
    .catch(error => {
        console.error('Error fetching classroom data:', error);
    });
}

function updateClassStatus (classroomId, newStatus) {
      const formData = new FormData();
      formData.append('classroomId', classroomId);  // Append form fields to formData
      formData.append('newStatus', newStatus);

      console.log(formData);

      fetch('/update-class-status', {
        method: 'POST',
        body: formData,  // Send as multipart/form-data
      })
        .then((response) => response.json())
        .then((data) => {
          if (data.success) {
            alert('Status updated successfully!');
          } else {
            alert('Error updating status');
          }
        })
        .catch((error) => console.error('Error:', error));
    };

</script>

