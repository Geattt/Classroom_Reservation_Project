                        <% if (classroom && classroom.length > 0) { %>
                            <% classroom.forEach(function(classroom) { %>
                                <tr>
                                    <td><%= classroom.class_name %></td>
                                    <td><%= new Date(classroom.date).toISOString().slice(0, 10) %></td>
